<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/navbar.ejs') %>
        
    <div class="content">
        <h1 class="char-title pt-5 pb-3">Characters</h1>
    
        <% if (characters.length > 0) { %>
          <% characters.forEach(characters => { %>
            <h1 class="title">Name: <%= characters.name %></h1>
            <p>Attack Range: <%= characters.attackRange %></p>
            <p>Ability Upgrades: <%= characters.abilityUpgrades %></p>
            <p class="randominfo">Info: <%= characters.randomInfo %></p>
          <% }) %>
        <% } else { %>
          <p>There are no blogs to display...</p>
        <% } %>
        
      </div>

      <%- include('./partials/footer.ejs') %>

</body>
</html>